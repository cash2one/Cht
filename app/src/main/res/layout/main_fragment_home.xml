<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.main.MainHomeFragment"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_actionbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >

        <Button
            android:id="@+id/btn_toolbar_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_small_height"
            android:layout_gravity="center"
            android:background="@drawable/btn_rectangle_divider_stroke"
            android:drawableLeft="@mipmap/ic_search"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:gravity="left|center_vertical"
            android:hint="@string/hint_search"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:textColorHint="@color/text_black_secondary"
            android:textSize="@dimen/text_size_body_material"
            />

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/home_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:id="@+id/sv_home_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_window"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@color/white"
                    >

                    <com.damenghai.chahuitong.widget.HeadViewPager
                        android:id="@+id/pager_home_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/def_image_loading"
                        />

                    <com.damenghai.chahuitong.widget.CirclePageIndicator
                        android:id="@+id/home_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:clickable="false"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="12dp"
                    >

                    <LinearLayout
                        android:id="@+id/ll_home_sample"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/dv_home_sample"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            app:actualImageScaleType="centerCrop"
                            app:placeholderImage="@mipmap/def_image_loading"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="vertical"
                            >

                            <TextView
                                style="@style/TextBody"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:maxLength="6"
                                android:text="@string/label_home_free"
                                />

                            <TextView
                                style="@style/TextCaption"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/btn_rectangle_divider_bg_white_stroke"
                                android:gravity="center"
                                android:minWidth="60dp"
                                android:text="@string/btn_home_apply"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="8dp"
                        android:background="@color/div_gray"
                        />

                    <LinearLayout
                        android:id="@+id/ll_home_bargain"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/dv_home_bargain"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:padding="1dp"
                            app:actualImageScaleType="centerCrop"
                            app:placeholderImage="@mipmap/def_image_loading"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="68dp"
                            android:gravity="right"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="19dp"
                                android:minWidth="84dp"
                                android:src="@mipmap/ic_bargain_timer"
                                />

                            <TextView
                                style="@style/TextCaption"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/btn_rectangle_divider_bg_white_stroke"
                                android:gravity="center"
                                android:minWidth="60dp"
                                android:text="@string/btn_home_buy"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_commend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    >

                    <LinearLayout
                        android:id="@+id/ll_home_valuer"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >

                        <TextView
                            style="@style/TextSubhead"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/subhead_home_recommend"
                            />

                        <TextView
                            style="@style/TextCaption"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableRight="@mipmap/ic_arrow_more"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:singleLine="true"
                            android:text="@string/label_home_recommend"
                            />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="168dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        >

                        <ImageView
                            android:id="@+id/iv_home_valuer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/bg_home_recommend"
                            />

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@drawable/triangle_bg_window"
                            />

                    </FrameLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_home_galley"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_window"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingBottom="8dp"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/TextSubhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical"
                        android:text="@string/subhead_home_guess"
                        />

                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/label_home_guess"
                        />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/gv_home_guess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-8dp"
                    android:background="@color/bg_window"
                    android:padding="8dp"
                    />

                <TextView
                    android:id="@+id/btn_goods_list"
                    style="@style/ButtonBorderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/widget_small_height"
                    android:gravity="center"
                    android:text="查看所有茶品"
                    android:textColor="@color/text_black_secondary"
                    />

            </LinearLayout>

        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>


