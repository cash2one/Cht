<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_window"
    android:orientation="vertical"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_galley_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/desc_goods_thumb"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@mipmap/def_image_loading"
        app:placeholderImageScaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/item_galley_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_black_secondary"
            android:textSize="@dimen/text_size_body_material"
            tools:text="五福茶业"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            />

        <TextView
            android:id="@+id/item_galley_score"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/text_recommend_score"
            android:textColor="@color/text_black_primary"
            android:textSize="@dimen/text_size_caption_material"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            />

    </LinearLayout>

</LinearLayout>