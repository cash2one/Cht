<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/item_valuator_image"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:src="@mipmap/def_image_loading"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/item_valuator_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="呈记福建省铁观音"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textAppearance="@style/TextSubhead"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="8dp"
            >
            <TextView
                android:id="@+id/item_valuator_price"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="￥198.00"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextBody"
                />

            <TextView
                android:id="@+id/item_valuator_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_recommend_score"
                android:textAppearance="@style/TextBody"
                />

            <TextView
                android:id="@+id/item_valuator_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="云南"
                android:drawableRight="@mipmap/ic_location_goods"
                android:drawablePadding="4dp"
                android:gravity="right"
                style="@style/TextCaption"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>