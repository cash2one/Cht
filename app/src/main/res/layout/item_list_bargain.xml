<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/layout_bargain_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_window"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        >

        <TextView
            style="@style/TextCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_bargain_timer"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_bargain_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_secondary"
                android:textSize="@dimen/text_size_title_material"
                android:textStyle="bold"
                tools:text="2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_day"
                android:textColor="@color/text_black_secondary"
                android:textSize="@dimen/text_size_body_material"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_bargain_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_secondary"
                android:textSize="@dimen/text_size_title_material"
                android:textStyle="bold"
                tools:text="10"
                />

            <TextView
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_hour"
                android:textColor="@color/text_black_secondary"
                android:textSize="@dimen/text_size_body_material"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_bargain_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_secondary"
                android:textSize="@dimen/text_size_title_material"
                android:textStyle="bold"
                tools:text="10"
                />

            <TextView
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_minute"
                android:textColor="@color/text_black_secondary"
                android:textSize="@dimen/text_size_body_material"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_bargain_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_secondary"
                android:textSize="@dimen/text_size_title_material"
                android:textStyle="bold"
                tools:text="10"
                />

            <TextView
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_second"
                android:textColor="@color/text_black_secondary"
                android:textSize="@dimen/text_size_body_material"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/dv_bargain_image"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@mipmap/def_image_loading"
                app:placeholderImageScaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                >

                <TextView
                    android:id="@+id/tv_bargain_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:padding="8dp"
                    android:textAppearance="@style/TextSubhead"
                    tools:text="这里是标题是的啊啊"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    >

                    <TextView
                        android:id="@+id/tv_bargain_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextBody"
                        android:textColor="@color/colorAccent"
                        tools:text="￥98.00"
                        />

                    <TextView
                        android:id="@+id/tv_bargain_price"
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        tools:text="￥200.00"
                        />

                    <TextView
                        android:id="@+id/tv_bargain_stock"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        tools:text="已抢购5份/共120份"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

