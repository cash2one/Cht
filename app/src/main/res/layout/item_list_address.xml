<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    >

    <include layout="@layout/include_address_info" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/div_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/check_address_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/rbtn_primary2white_sel"
            android:paddingLeft="4dp"
            android:text="@string/btn_address_set_default"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_address_edit"
            style="@style/ButtonBorderless"
            android:layout_width="@dimen/widget_max_height"
            android:layout_height="@dimen/widget_small_height"
            android:gravity="center"
            android:text="@string/text_edit"
            android:textColor="@color/text_black_secondary"
            android:textSize="@dimen/text_size_body_material"
            />

        <Button
            android:id="@+id/btn_address_del"
            style="@style/ButtonBorderless"
            android:layout_width="@dimen/widget_max_height"
            android:layout_height="@dimen/widget_small_height"
            android:text="@string/btn_delete"
            android:textColor="@color/text_black_secondary"
            android:textSize="@dimen/text_size_body_material"
            />

    </LinearLayout>

</LinearLayout>