<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_address_name"
            style="@style/TextSubhead"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/label_consignee_name"
            />

        <TextView
            android:id="@+id/tv_address_mobile"
            style="@style/TextSubhead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="15375870891"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_address_detail"
        style="@style/TextBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="福建省 厦门市 湖里区安岭路三福财富中心湖里区安岭路三福财富中心"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/div_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/check_address_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/rbtn_primary2white_sel"
            android:paddingLeft="4dp"
            android:text="@string/btn_address_set_default"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_address_edit"
            style="@style/ButtonBorderless"
            android:layout_width="@dimen/widget_max_height"
            android:layout_height="@dimen/widget_small_height"
            android:gravity="center"
            android:text="@string/text_edit"
            android:textColor="@color/text_black_secondary"
            android:textSize="@dimen/text_size_body_material"
            />

        <Button
            android:id="@+id/btn_address_del"
            style="@style/ButtonBorderless"
            android:layout_width="@dimen/widget_max_height"
            android:layout_height="@dimen/widget_small_height"
            android:text="@string/btn_delete"
            android:textColor="@color/text_black_secondary"
            android:textSize="@dimen/text_size_body_material"
            />

    </LinearLayout>

</LinearLayout>