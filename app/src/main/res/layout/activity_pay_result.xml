<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/include_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_pay_result"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/text_pay_success"
            />

        <LinearLayout
            android:id="@+id/layout_pay_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_pay_repay"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/widget_small_height"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/btn_radius_primary2dark_selector"
                android:text="@string/btn_repay"
                android:visibility="gone"
                android:textSize="@dimen/text_size_body_material"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/btn_pay_view_order"
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/widget_small_height"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/btn_rectangle_divider_bg_white_stroke"
                android:text="@string/btn_view_order"
                />

            <Button
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/widget_small_height"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/btn_rectangle_divider_bg_white_stroke"
                android:onClick="toHome"
                android:text="@string/btn_back_home"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
