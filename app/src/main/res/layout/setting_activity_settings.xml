<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.settings.SettingsActivity">

    <include layout="@layout/include_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_setting_modify"
            style="@style/ListItemDetailButton"
            android:drawableRight="@mipmap/ic_arrow_more"
            android:text="@string/btn_modify_password"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div_gray"/>

        <Button
            android:id="@+id/btn_setting_feedback"
            style="@style/ListItemDetailButton"
            android:drawableRight="@mipmap/ic_arrow_more"
            android:text="@string/btn_login_feedback"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/div_gray"/>

            <Button
                android:id="@+id/btn_setting_cache"
                style="@style/ButtonBorderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_medium_height"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/btn_setting_clean_cache"
                android:textSize="@dimen/text_size_subhead_material"
                />

            <TextView
                android:id="@+id/tv_setting_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:drawablePadding="8dp"
                android:textColor="@color/text_black_secondary"
                android:textSize="@dimen/text_size_body_material"
                tools:text="10kb"
                />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div_gray"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/btn_setting_update"
                style="@style/ListItemDetailButton"
                android:text="@string/btn_setting_check_update"

                />

            <TextView
                android:id="@+id/tv_setting_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/text_black_secondary"
                android:textSize="@dimen/text_size_body_material"
                tools:text="3.0"
                />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div_gray"/>

        <Button
            android:id="@+id/btn_setting_about"
            style="@style/ListItemDetailButton"
            android:drawableRight="@mipmap/ic_arrow_more"
            android:text="@string/btn_setting_about_us"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_setting_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/btn_radius_primary2dark_selector"
        android:text="@string/btn_logout"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_subhead_material"
        />

</LinearLayout>
