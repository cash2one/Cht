<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_goods_thumb"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@mipmap/def_image_loading"
            app:placeholderImageScaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textAppearance="@style/TextSubhead"
            tools:text="呈记福建省铁观音"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <TextView
                android:id="@+id/item_valuator_price"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="￥198.00"
                android:textAppearance="@style/TextBody"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/item_valuator_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_recommend_score"
                android:textAppearance="@style/TextBody"
                />

            <TextView
                android:id="@+id/item_valuator_location"
                style="@style/TextCaption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/ic_location_goods"
                android:gravity="right"
                android:text="云南"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>