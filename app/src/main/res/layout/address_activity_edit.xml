<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.personal.AddressEditActivity">

    <include layout="@layout/include_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_medium_height"
        android:background="@drawable/bg_vetical_bottom_divider"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <TextView
            style="@style/TextSubhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_consignee_name"
            />

        <EditText
            android:id="@+id/et_add_address_name"
            style="@style/TextBody"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/hint_limit_name"
            android:inputType="textMultiLine"
            android:maxLength="15"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColorHint="@color/text_hint"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/div_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_medium_height"
        android:background="@drawable/bg_vetical_bottom_divider"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <TextView
            style="@style/TextSubhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_mobile_number"
            />

        <EditText
            android:id="@+id/et_add_address_mobile"
            style="@style/TextBody"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/hint_limit_mobile"
            android:inputType="number"
            android:maxLength="11"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColorHint="@color/text_hint"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/div_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_medium_height"
        android:background="@drawable/bg_vetical_bottom_divider"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <TextView
            style="@style/TextSubhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_area"
            />

        <Button
            android:id="@+id/btn_add_address_area"
            style="@style/ButtonBorderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/ic_arrow_more"
            android:gravity="left|center_vertical"
            android:hint="@string/hint_please_choose"
            android:maxLength="15"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/text_black_primary"
            android:textColorHint="@color/text_hint"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/div_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_medium_height"
        android:background="@drawable/bg_vetical_bottom_divider"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <TextView
            style="@style/TextSubhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_detail_address"
            />

        <EditText
            android:id="@+id/et_add_address_address"
            style="@style/TextBody"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/hint_detail_address"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColorHint="@color/text_hint"
            />

    </LinearLayout>

    <CheckBox
        android:id="@+id/check_address_default"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_small_height"
        android:text="@string/btn_address_set_default"
        android:button="@drawable/rbtn_primary2white_sel"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:paddingLeft="8dp"
        style="@style/TextBody"
        />

    <Button
        android:id="@+id/btn_add_address_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_radius_primary2dark_selector"
        android:text="@string/btn_save_address"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_body_material"
        />

</LinearLayout>
