<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="106dp"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center"
    >

    <Button
        android:id="@+id/count_btn_left"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:background="@drawable/count_left_sel"
        android:gravity="center"
        android:text="-"
        style="@style/TextSubhead"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/count_et_quantity"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@mipmap/count_middle"
        android:gravity="center"
        style="@style/TextBody"
        />

    <Button
        android:id="@+id/count_btn_right"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:background="@drawable/count_right_sel"
        android:gravity="center"
        android:text="+"
        style="@style/TextSubhead"
        android:textStyle="bold"
        />

</LinearLayout>