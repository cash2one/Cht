<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.goods.GoodsDetailActivity">

    <include layout="@layout/include_toolbar"/>

    <ScrollView
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.damenghai.chahuitong.widget.HeadViewPager
                    android:id="@+id/pager_goods_image"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    />

                <com.damenghai.chahuitong.widget.CirclePageIndicator
                    android:id="@+id/indicator_goods"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:clickable="false"
                    />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin"
                >

                <TextView
                    android:id="@+id/tv_goods_name"
                    style="@style/TextSubhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="八马 18渡 品茶 传统香铁观音 茶叶 清香型 乌龙茶 茶叶礼盒装252g"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_total"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_title_material"
                        />

                    <TextView
                        android:id="@+id/tv_goods_old_price"
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="@string/label_total"
                        tools:text="￥360.00"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_goods_freight"
                        style="@style/TextCaption"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/label_goods_freight"
                        />

                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:singleLine="true"
                        android:text="@string/label_goods_sales"
                        />

                    <TextView
                        android:id="@+id/tv_goods_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_black_primary"
                        android:textSize="@dimen/text_size_caption_material"
                        tools:text="60"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/div_gray"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-16dp"
                    android:layout_marginRight="-16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_goods_detail_promise"
                        android:gravity="center"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/text_goods_quality"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/div_gray"/>

                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_goods_detail_promise"
                        android:gravity="center"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/text_goods_delivery_today"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/div_gray"/>

                    <TextView
                        style="@style/TextCaption"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_goods_detail_promise"
                        android:gravity="center"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="@string/text_goods_spot"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin"
                >

                <TextView
                    style="@style/TextTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_goods_attrs"
                    />

                <com.damenghai.chahuitong.widget.WrapHeightGridView
                    android:id="@+id/grid_detail_attrs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:horizontalSpacing="8dp"
                    android:numColumns="3"
                    android:verticalSpacing="8dp"
                    />

            </LinearLayout>

            <Button
                style="@style/ButtonBorderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/white"
                android:drawableRight="@mipmap/ic_arrow_more"
                android:gravity="left"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/label_goods_style"
                android:textAppearance="@style/TextTitle"
                android:visibility="gone"
                />

            <RadioGroup
                android:id="@+id/radio_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_medium_height"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/white"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/tab_goods_body"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/indicator_primary_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/tab_goods_detail"
                    android:textColor="@color/text_color_primary_selector"
                    android:textSize="@dimen/text_size_subhead_material"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/div_gray"
                    />

                <RadioButton
                    android:id="@+id/tab_goods_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/indicator_primary_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/tab_comment"
                    android:textColor="@color/text_color_primary_selector"
                    android:textSize="@dimen/text_size_subhead_material"
                    />

            </RadioGroup>

            <FrameLayout
                android:id="@+id/container_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_goods_detail_share"
            style="@style/TextCaption"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/icon_btn_share_selector"
            android:paddingTop="8dp"
            android:text="@string/btn_share"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/div_gray"/>

        <ToggleButton
            android:id="@+id/btn_goods_detail_favorites"
            style="@style/TextCaption"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:button="@null"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/check_favorites_selector"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:textOff="@string/btn_favorites"
            android:textOn="@string/btn_has_favorite"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/div_gray"/>

        <Button
            android:id="@+id/btn_goods_detail_service"
            style="@style/TextCaption"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/icon_btn_service_selector"
            android:paddingTop="8dp"
            android:text="@string/btn_service"
            />

        <Button
            android:id="@+id/btn_goods_detail_add_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:text="@string/btn_add_cart"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_subhead_material"
            />

        <Button
            android:id="@+id/btn_goods_detail_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:text="@string/btn_buy"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_subhead_material"
            />

    </LinearLayout>

</LinearLayout>
