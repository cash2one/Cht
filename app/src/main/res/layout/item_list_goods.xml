<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_goods_thumb"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@mipmap/def_image_loading"
            app:placeholderImageScaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_goods_name"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:lines="2"
            android:padding="8dp"
            tools:text="正山小种礼盒 装养胃茶、春茶圆香 金俊眉红正山小种礼盒 装养胃茶、春茶圆香 金俊眉红"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="-8dp"
            >

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_body_material"
                android:textStyle="bold"
                android:text="@string/text_rmb"
                tools:text="￥198.00"
                />

            <TextView
                android:id="@+id/tv_goods_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_recommend_score"
                android:textAppearance="@style/TextBody"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv_goods_origin"
                style="@style/TextCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_goods_location"
                android:drawablePadding="2dp"
                tools:text="云南"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>