<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/goods_dv_thumb"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:actualImageScaleType="centerCrop"
            app:placeholderImage="@mipmap/def_image_loading"
            app:placeholderImageScaleType="centerCrop"
            />

        <TextView
            android:id="@+id/goods_tv_title"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:lines="2"
            tools:text="正山小种礼盒 装养胃茶、春茶圆香 金俊眉红"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            >

            <TextView
                android:id="@+id/goods_tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_body_material"
                android:textStyle="bold"
                tools:text="￥198.00"
                />

            <TextView
                android:id="@+id/goods_tv_origin"
                style="@style/TextCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_location_goods"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:visibility="gone"
                tools:text="云南"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>