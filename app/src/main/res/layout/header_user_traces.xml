<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_user_avatar"
            style="@style/MaxAvatar"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                style="@style/TextCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_trace"
                />

            <TextView
                android:id="@+id/tv_user_traces"
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="58"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_user_following"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                style="@style/TextCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_following"
                />

            <TextView
                android:id="@+id/tv_user_following"
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="58"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_user_followers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                style="@style/TextCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_followers"
                />

            <TextView
                android:id="@+id/tv_user_followers"
                style="@style/TextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="58"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/widget_tiny_height"
            android:layout_height="@dimen/widget_tiny_height"
            android:contentDescription="@string/desc_gender"
            android:src="@mipmap/ic_action_cart"
            />

        <TextView
            android:id="@+id/tv_user_username"
            style="@style/TextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            tools:text="thkiwi"
            />

        <TextView
            android:id="@+id/tv_user_area"
            style="@style/TextCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            tools:text="福建，厦门"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_user_follow"
            style="@style/ButtonSmall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_tiny_height"
            android:background="@drawable/btn_rectangle_primary_stroke"
            android:text="@string/btn_add_follow"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_caption_material"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_user_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:textColor="@color/text_black_secondary"
        android:textSize="@dimen/text_size_body_material"
        android:visibility="gone"
        tools:text="做个有趣的人不容易"
        />

</LinearLayout>