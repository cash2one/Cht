<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/activity_horizontal_margin"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dv_consult_avatar"
        style="@style/SmallAvatar"
        />

    <TextView
        android:id="@+id/tv_consult_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/dv_consult_avatar"
        android:paddingTop="8dp"
        android:textColor="@color/text_black_secondary"
        android:textSize="@dimen/text_size_caption_material"
        tools:text="DSK"
        />

    <TextView
        android:id="@+id/tv_consult_time"
        style="@style/TextCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="8dp"
        tools:text="11小时前"
        />

    <TextView
        android:id="@+id/tv_consult_content"
        style="@style/TextBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_consult_username"
        android:layout_below="@id/tv_consult_username"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        tools:text="风中风中"
        />

</RelativeLayout>