<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bg_actionbar</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowBackground">@color/bg_window</item>
        <!--<item name="android:textColorPrimary">@color/text_black_primary</item>-->
        <!--<item name="android:textColorSecondary">@color/text_black_secondary</item>-->

        <item name="android:listDivider">@drawable/decoration_medium</item>
    </style>

    <style name="AppTheme.ItemLineDecoration">
        <item name="android:listDivider">@drawable/decoration_line</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/bg_launch</item>
    </style>

    <!-- 黑色标题文本 -->
    <style name="TextTitle" parent="TextAppearance.AppCompat.Title" />
    <style name="TextPrimaryTitle" parent="TextTitle">
        <item name="android:textColor">@color/colorPrimary</item><!--主色标题文本-->
    </style>
    <style name="TextSubhead" parent="TextAppearance.AppCompat.Subhead" /><!-- 副标题文本 -->
    <style name="TextBody" parent="TextAppearance.AppCompat.Body1" /><!--主体文本-->
    <style name="TextCaption" parent="TextAppearance.AppCompat.Caption" /><!--说明文本-->
    <style name="ButtonNormal" parent="Widget.AppCompat.Button" />
    <style name="ButtonBorderless" parent="Widget.AppCompat.Button.Borderless" />
    <style name="ButtonBorderlessColored" parent="Widget.AppCompat.Button.Borderless.Colored" />
    <style name="ButtonSmall" parent="Widget.AppCompat.Button.Small" />
    <style name="ButtonAddFollow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/widget_small_height</item>
        <item name="android:text">@string/btn_add_follow</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>
    <style name="TitleToolbar" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:id">@+id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/bg_actionbar</item>
        <item name="com.damenghai.chahuitong:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="com.damenghai.chahuitong:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="PopupWindowPushUpAnimation">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="ThemeAudioDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ListItemDetailButton" parent="ButtonBorderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@mipmap/ic_arrow_more</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">@dimen/text_size_subhead_material</item>
    </style>

    <style name="UserAvatar">
        <item name="com.damenghai.chahuitong:roundAsCircle">true</item>
        <item name="com.damenghai.chahuitong:actualImageScaleType">centerCrop</item>
        <item name="com.damenghai.chahuitong:placeholderImageScaleType">centerCrop</item>
        <item name="com.damenghai.chahuitong:placeholderImage">@mipmap/def_image_loading</item>
    </style>

    <style name="SmallAvatar" parent="UserAvatar">
        <item name="android:layout_width">@dimen/widget_small_height</item>
        <item name="android:layout_height">@dimen/widget_small_height</item>
    </style>

    <style name="MediumAvatar" parent="UserAvatar">
        <item name="android:layout_width">@dimen/widget_medium_height</item>
        <item name="android:layout_height">@dimen/widget_medium_height</item>
    </style>

    <style name="MaxAvatar" parent="UserAvatar">
        <item name="android:layout_width">@dimen/widget_max_height</item>
        <item name="android:layout_height">@dimen/widget_max_height</item>
    </style>

    <style name="MediumEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widget_medium_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textAppearance">@style/TextBody</item>
        <item name="android:inputType">text</item>
    </style>

</resources>
